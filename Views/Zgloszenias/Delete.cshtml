@model SystemZglaszaniaAwariiGlowny.Models.Zgloszenia

@{
    ViewData["Title"] = "Usuwanie awarii";
}

<h1 class="text-bg-warning">Usuwanie zgłoszonej awarii</h1>

<h3>Czy na pewno chcesz usunąć zgłoszoną awarię?</h3>
<div>
    <h4>Zgloszenia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AwariaOpis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AwariaOpis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Magazyn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Magazyn.MagazynName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Maszyna)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maszyna.MaszynaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanik.MechanikName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ZgloszeniaId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do spisu awarii</a>

        @{
            if (User.IsInRole("admin"))
            {
                <a asp-action="List">Powrót do listy awarii</a>

            }
        }

    </form>
</div>
