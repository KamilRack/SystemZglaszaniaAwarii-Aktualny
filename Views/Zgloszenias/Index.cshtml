@model ZgloszeniaViewModel

    @{
        ViewData["Title"] = "Lista tekstów";
    }
<div class="container">
    




<!-- Lista tekstów -->
<div class="col-xl-12">
    @foreach (var item in Model.Zgloszenias)
    {

  
    <div class="card mt-2">
        <div class="card-header">
            <h4 class="text-primary oswald">Numer zgłoszenia: @item.ZgloszeniaId</h4>
        </div>
       
            <div class="col-md-8">
                <div class="card-body">
                  
                    <p class="card-text fst-italic">@item.Magazyn.MagazynName</p>
                    <p class="card-text fst-italic">@item.Maszyna.MaszynaName</p>
                    <p class="card-text fst-italic">Opis awarii:
                        @item.AwariaOpis</p>
                    <h5 class="card-title text-success">Osoba zgłaszająca: @item.User.FullName</h5>
                    <h5 class="card-title text-success">Osoba realizująca: @item.Mechanik.MechanikName</h5>

                        <p class="card-text">
                            <small class="text-muted">
                                    Data zgłoszenia: @item.AddedDate.ToString("dd.MM.yyyy hh:mm tt")
                            </small>
                        </p>

                    <div class="position-relative">
                        <a href="#" class="btn btn-outline-primary position- 
absolute bottom-0 end-0">Czytaj >>></a>
                    </div>
                </div>
            </div>
        </div>
    
    
    }


            <div class="row mt-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @{
                            if (Model.MMView.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "Zgloszenias", new {PageNumber = Model.MMView.PageNumber - 1})">Poprzednia</a>
                                </li>

                            }

                            for (var i = 1; i <= Model.MMView.PageCount; i++)
                            {
                                <li class="@(i == Model.MMView.PageNumber ? "page-item active": "page-active")"><a class="page-link" href="@Url.Action("Index", "Zgloszenias", new {PageNumber = i})">@i</a></li>
                            }




                            if (Model.MMView.PageNumber < Model.MMView.PageCount)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Zgloszenias", new {PageNumber = Model.MMView.PageNumber + 1})">Następna</a></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
    </div>
</div>