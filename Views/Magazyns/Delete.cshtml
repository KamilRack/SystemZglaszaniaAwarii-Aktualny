@model SystemZglaszaniaAwariiGlowny.Models.Magazyn

@{
    ViewData["Title"] = "Usuwanie";
}

<h1 class="text-primary Roboto">Usuwanie</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
        
        <h5 class="alert alert-info" role="alert"> @ViewBag.DeleteMessage </h5>

    }
    else
    {
       <h5 class="alert alert-danger" role="alert">Czy na pewno chcesz usunąć ten Magazyn?</h5>
 
    }
}






<h4 class="text-success"><b>Magazyn</b></h4
<div>
    <h4>Magazyn</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MagazynName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MagazynName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MagazynOpis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MagazynOpis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Graphic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Graphic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Display)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Display)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
                {
                    <input type="hidden" asp-for="MagazynId" />
                    <input type="submit" value="Usuń" class="btn btn-outline-light" id="maszynabtn"/>
                }
            }

        <a asp-action="List" class="btn btn-outline-light" id="maszynabtn">Powrót do spisu</a>
    </form>
</div>
