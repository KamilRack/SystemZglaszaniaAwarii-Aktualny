@model SystemZglaszaniaAwariiGlowny.Models.Magazyn

@{
    ViewData["Title"] = "Dodawanie magazynu";
}

<h1 class="text-primary Roboto">Dodawanie</h1>



@{

    if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert"> @ViewBag.ErrorMessage </div>
    }
}



<h4>Magazyn</h4>
<hr />
<div class="row">
    <div class="col-md-4" interspace>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MagazynName" class="control-label"></label>
                <input asp-for="MagazynName" class="form-control" />
                <span asp-validation-for="MagazynName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagazynOpis" class="control-label"></label>
                <textarea asp-for="MagazynOpis" class="form-control"> </textarea>
                <span asp-validation-for="MagazynOpis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Graphic" class="control-label"></label>
                <input type="file" name="picture" id="picture" class="form-control" 
                       accept=".jpg,.gif,.png" />
                <span asp-validation-for="Graphic" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Display" /> @Html.DisplayNameFor(model => model.Display)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-outline-light" id="maszynabtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-outline-light" id="maszynabtn">Powrót do spisu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
