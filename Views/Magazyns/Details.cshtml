    ViewData["Title"] = "Szczegóły";
}

<h1 class="text-primary Roboto">Szczegóły</h1>

<div>
    <h4>Magazyn</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" interspace>
            @Html.DisplayNameFor(model => model.MagazynName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MagazynName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MagazynOpis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MagazynOpis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Graphic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Graphic)
        </dd>
        @{
            if (User.IsInRole("admin"))
            {
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Active)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Active)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Display)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Display)
                    </dd>
            }
        }
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.User.NormalizedUserName)
            </dd>
       
    </dl>
</div>
<div>
    
                              @{
