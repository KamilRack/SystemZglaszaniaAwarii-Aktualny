@model SystemZglaszaniaAwariiGlowny.Models.Zgloszenia

@{
    ViewData["Title"] = "Edycja";
}

<h1 class="text-warning">Edytuj awarię</h1>


<hr />
<div class="row" id="zglcreate">
    <div class="col-md-4">
        <form asp-action="Edit" id="zglcreate1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZgloszeniaId" />
            <div class="form-group col-lg-8 col-xl-12">
                <label asp-for="AwariaOpis" class="control-label"></label>
                <textarea asp-for="AwariaOpis" class="form-control"></textarea>
                <span asp-validation-for="AwariaOpis" class="text-danger"></span>
            </div>
         


          @{
                if (User.IsInRole("mechanik") || (User.IsInRole("admin")))
              {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                   <div class="form-group">
                <label asp-for="MechanikId" class="control-label"></label>
                <select asp-for="MechanikId" class="form-control" asp-items="ViewBag.MechanikId"></select>
                <span asp-validation-for="MechanikId" class="text-danger"></span>
            </div>
              }
          }
            <div class="form-group">
                <label asp-for="MagazynId" class="control-label"></label>
                <select asp-for="MagazynId" class="form-control" asp-items="ViewBag.MagazynId"></select>
                <span asp-validation-for="MagazynId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaszynaId" class="control-label"></label>
                <select asp-for="MaszynaId" class="form-control" asp-items="ViewBag.MaszynaId"></select>
                <span asp-validation-for="MaszynaId" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <input class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 btn btn-outline-light" id="maszynabtn" type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-light col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="maszynabtn">Powrót do spisu </a>
                <a asp-action="List" class="btn btn-outline-light col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="maszynabtn">Powrót do listy </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
