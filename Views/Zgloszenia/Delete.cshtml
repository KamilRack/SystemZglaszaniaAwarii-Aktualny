@model SystemZglaszaniaAwariiGlowny.Models.Zgloszenia


@{
    ViewData["Title"] = "Usuwanie awarii";
}


<h1>Usuwanie zgłoszenia</h1>



<h3 class="text-bg-danger">Czy na pewno chcesz usunąć te zgłoszenie?</h3>
<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwariaOpis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwariaOpis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Magazyn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Magazyn.MagazynName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Maszyna)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Maszyna.MaszynaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mechanik.MechanikName)
        </dd>
    </dl>
    

    <form asp-action="Delete">
        <input type="hidden" asp-for="ZgloszeniaId" />
        @{
            if (User.IsInRole("admin"))
            {
            
                <input type="submit" value="Usuń" class="btn btn-danger col-md-6" />
                <a asp-action="Index" class="btn btn-outline-light col-sm-12 col-12 col-md-6" id="maszynabtn">Powrót do spisu </a>
                <a asp-action="List" class="btn btn-outline-light col-sm-12 col-12 col-md-6" id="maszynabtn">Powrót do listy </a>
            }
            }
         
    </form>


   
               
</div>
