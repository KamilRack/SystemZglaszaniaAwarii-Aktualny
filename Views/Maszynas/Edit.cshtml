@model SystemZglaszaniaAwariiGlowny.Models.Maszyna

@{
    ViewData["Title"] = "Edycja";
}

<h1 class="text-primary roboto">Edycja</h1>

<h4>Maszyna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaszynaId" />
            <input type="hidden" asp-for="Graphic" />
            <input type="hidden" asp-for="Id" value="@ViewBag.Id">
            <div class="form-group">
                <label asp-for="MaszynaName" class="control-label"></label>
                <input asp-for="MaszynaName" class="form-control" />
                <span asp-validation-for="MaszynaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaszynaOpis" class="control-label"></label>
                <textarea asp-for="MaszynaOpis" class="form-control"></textarea>
                <span asp-validation-for="MaszynaOpis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Graphic" class="control-label"></label>
                <br />
                <img src="@Url.Content(Model.Graphic != null ? "~/grafika/maszyny/" + Model.Graphic :"~/grafika/maszyny/brak.jpg")" width="150" />
                <input type="file" name="picture" id="picture" class="form-control" accept=".jpg,.gif,.png" /> 
                <span asp-validation-for="Graphic" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Display" /> @Html.DisplayNameFor(model => model.Display)
                </label>
            </div>   
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-outline-light" id="maszynabtn" />
                <a asp-action="Details" class="btn btn-outline-light" id="maszynabtn">Powrót do spisu</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
