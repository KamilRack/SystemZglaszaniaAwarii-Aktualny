@model SystemZglaszaniaAwariiGlowny.Models.Maszyna

@{
    ViewData["Title"] = "Usuwanie";
}

<h1 class="text-primary roboto">Usuwanie</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {

        <h5 class="alert alert-info" role="alert"> @ViewBag.DeleteMessage </h5>

    }
    else
    {

        <h5 class="alert alert-danger" role="alert">
            Czy na pewno chcesz usunąć tę
            maszynę?
        </h5>
    
    }
}

<div>
    <h4 class="text-success">Maszyna</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaszynaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaszynaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaszynaOpis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaszynaOpis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Graphic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Graphic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Display)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Display)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">

        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
            {
                 <input type="hidden" asp-for="MaszynaId" />
        <input type="submit" value="Usuń" class="btn btn-outline-light" id="maszynabtn"/>
            }
        }
       
        <a asp-action="Index" class="btn btn-outline-light"  id="maszynabtn">Powrót do spisu</a>
        
    </form>
   
</div>

