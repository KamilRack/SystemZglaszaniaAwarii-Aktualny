@model MMViewModel
@{
    ViewData["Title"] = "Lista Maszyn";
}

<div class="container">
    <div class="row">

        <div class="d-none d-md-block col-md-12 col-xl-3">
            <div class="card mt-2 shadow-sm ">
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Maszynas", new { PageNumber = "1" }, FormMethod.Get))
                    {
                        <div class="row gt-3">
                            <div class="form-group col-auto">
                                <label for="Fraza">Nazwa maszyny:</label>
                                <input type="text" class="form-control" id="NazwaMaszyny" name="NazwaMaszyny"
                                   placeholder="Szukany ciąg" value="@Model.MMView?.NazwaMaszyny">
                            </div>
                            <div class="form-group col-auto">
                                <label for="Fraza">Fragment tekstu:</label>
                                <input type="text" class="form-control" id="FrazaM" name="FrazaM"
                                   placeholder="Szukany ciąg" value="@Model.MMView?.FrazaM">
                            </div>
                            <button type="submit" class="btn btn-primary mt-4 col-auto">Filtruj</button>

                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Lista tekstów -->
<div class="col-xl-9">
             @if (Model.MMView.MMCount > 0)
              {

                
                @foreach (var item in Model.Maszynas)
                {

            
            <div class="card mt-2">
                            <div class="card-header">
                    <h4 class="text-primary oswald">@item.MaszynaName</h4>
                            </div>

                <div class="row">
                    <div class="col-md-4">
                            <img src="@Url.Content(item.Graphic == null ?"~/css/grafika/maszyny/"+item.MaszynaId+".jpg" : "~/css/grafika/maszyny/"+item.Graphic)" class="img-fluid" alt="@item.MaszynaName" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text fst-italic">@item.MaszynaOpis</p>
                            <div class="position-relative">
                                        <a href="@Url.Action("Details", "Maszynas", new{id = item.MaszynaId})" class="btn btn-outline-primary position-absolute bottom-0 end-0" id="maszynabtn">Szczegóły</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            }

            }
            else 
            {
                <div class="alert alert-info d-flex align-items-center mt-2" role="alert"> <i class="bi bi-info-circle-fill me-3"></i>Brak maszyn do wyświetlenia. Zmień parametry filtrowania lub poszukiwany ciąg.
                </div>
            }
</div>
            

         

        <div class="row mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @{
                    if (Model.MMView.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", "Maszynas",new{PageNumber=Model.MMView.PageNumber -1})">Poprzednia</a>
                        </li>
                       
                        }

                    for (var i = 1; i <= Model.MMView.PageCount; i++)
                    {
                        <li class="@(i == Model.MMView.PageNumber ? "page-item active": "page-active")"><a class="page-link" href="@Url.Action("Index", "Maszynas", new{PageNumber = i})">@i</a></li>
                    }


               
                 
                if(Model.MMView.PageNumber < Model.MMView.PageCount)
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Maszynas",new{PageNumber=Model.MMView.PageNumber +1})">Następna</a></li>
                }
                }
            </ul>
        </nav>
        <div>
</div>



